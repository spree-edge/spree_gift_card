<fieldset class="form-group">
  <%= f.label :variant_id, Spree.t(:value) %>
  <span class="required">*</span><br/>
  <%= f.select :variant_id, variants_values(@gift_card_variants), { selected: @variant.try(:id) }, class: 'form-control p-0' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :email, Spree.t("recipient_email") %>
  <span class="required">*</span><br/>
  <%= f.text_field :email, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :name, Spree.t("recipient_name") %>
  <span class="required">*</span><br/>
  <%= f.text_field :name, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :sender_email, Spree.t("sender_email") %>
  <span class="required">*</span><br/>
  <%= f.text_field :sender_email, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :sender_name, Spree.t("sender_name") %>
  <span class="required">*</span><br/>
  <%= f.text_field :sender_name, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :delivery_on, Spree.t("delivery_on") %>
  <span class="required">*</span><br/>
  <%= f.datetime_select :delivery_on, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :note, Spree.t("note") %><br/>
  <%= f.text_area :note, rows: 6, class: 'form-control' %>
</fieldset>

<%= f.submit Spree.t(:add_to_cart), class: 'btn btn-lg btn-success btn-block' %>
